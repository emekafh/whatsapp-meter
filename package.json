{
  "name": "whatsapp-meter",
  "version": "1.0.0",
  "description": "Personal WhatsApp response time analytics",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node server.js",
    "build": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.whatsappmeter.app",
    "productName": "WhatsApp Meter",
    "icon": "build/icon.png",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "build/icon.png"
    },
    "dmg": {
      "title": "WhatsApp Meter",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "server.js",
      "webhook.js",
      "db.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json",
      ".env.example"
    ]
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "localtunnel": "^2.0.2",
    "sql.js": "^1.14.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "esbuild": "^0.27.3"
  }
}
